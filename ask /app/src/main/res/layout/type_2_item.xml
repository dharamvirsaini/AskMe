<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:id="@+id/template_two_item_card_container"
     android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:layout_margin="10dp"

    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp"

    android:elevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"


        android:id="@+id/template_two_item_card_relative_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/imageView_template2_item"
            android:src="@mipmap/ic_launcher"
            android:layout_height="wrap_content"
             android:gravity="start"
            android:layout_weight="0.5"
          />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:layout_above="@+id/template_two_price_textView"
                android:id="@+id/textView_template2_item"
                android:textSize="25sp"
               android:text= "Hello"
                android:gravity="center"
                android:layout_weight="0"

                 />
            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_template2_item"
                android:gravity="top|center"
                android:id="@+id/template_two_price_textView"
                android:textSize="25sp"
                android:layout_weight="0.3"
                android:text= "Rs 50 Only"
                android:layout_marginBottom="5dp" />



    </LinearLayout>


</android.support.v7.widget.CardView>